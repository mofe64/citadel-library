<!DOCTYPE html>
<html lang="en">
<%- include('adminPartials/head'); -%>

<body>
  <div class="container-scroller">
    <!-- partial:../../partials/_horizontal-navbar.html -->
    <%- include('adminPartials/nav'); -%>
        <!-- partial -->
    <div class="container-fluid page-body-wrapper">
      <div class="main-panel">
        <div class="content-wrapper">
          <div class="row">
            <div class="col-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Upload a new book</h4>
                  <form class="forms-sample" action="/admin/request/<%=request._id %>" method="post">
                    <div class="form-group">
                      <label for="exampleInputName1">Title</label>
                      <input type="text" class="form-control" id="exampleInputName1" placeholder="Book Title" name="title" value="<%=request.bookName %>" readonly >
                    </div>
                    <div class="form-group">
                      <label for="exampleInputEmail3">Author</label>
                      <input type="text" class="form-control" id="exampleInputEmail3" placeholder="Book Author" name="author" value="<%=request.bookAuthor %>" readonly>
                    </div>
                    <div class="form-group">
                      <label for="exampleInputEmail3">Status</label>
                      <input type="text" class="form-control" id="exampleInputEmail3" placeholder="Book Author" name="author"
                      <% if (request.status == false) {%>
                       value="Pending" 
                    <%} else {%>
                        value="fufilled"
                    <%} %>
                    readonly>
                    </div>
                    <div class="form-group">
                      <label for="exampleInputCity1">Description</label>
                      <textarea  class= "form-control" name="description" id="" cols="30" rows="10"readonly>
                       <% if (request.description !== '') {%>
                        <%=request.description %>
                        <%} else {%>
                            Description not given
                        <%} %> 
                      </textarea>
                    </div>
                     <div class="form-group">
                    <label for="featured">Fulfilled</label>
                    <input type="checkbox" name="fulfilled" id="featured">                        
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Change Status</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- footer  -->
        <%- include('adminPartials/footer'); -%>
      </div>
    </div>
  </div>
 <%- include('adminPartials/scripts'); -%>
</body>

</html>
